$("ul.errors").html("")
<% if @slide.errors.any? %>
  <% @slide.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".slide-index").html("<%= escape_javascript(render 'index') %>")
  $("#slide-modal").modal("hide")
<% end %>