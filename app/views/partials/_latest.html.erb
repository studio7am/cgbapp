                          <br>
                            <p><a class="btn btn-danger btn-xs"  href="/posts/<%= post.id %>">Читать</a> </p>

                          </div>


                        </div>
                        <hr>
                            <% end %>
                    </div>
                    <br>

                    <a href="/posts" class="">Архив новостей</a>
