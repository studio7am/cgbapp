

               <!--ПОСЛЕДНИЕ НОВОСТИ-->
               <div class="latest">
                <div class="heading">Свежие новости</div>
                    <div class="col-lg-6 col-md-6 col-sm-6 line">
                        <% @posts.each do |post|  %>

                          <div class="post">
                            <div class="post-date">
                              <div class="post-title">
                              <%= post.title %>
                            </div>
                               <a href="/posts/<%= post.id %>"><img src="images/postlink.png" class="ico-link"></a> 
                              <%= post.created_at.to_s(:ru_datetime) %>   
                            </div>
                            <div class="post-content">
                            <p><%= truncate(strip_tags(post.content), length: 92) %></p>
                          </div>
                        </div>
                            <% end %>

                     </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                        <% @items.each do |post|  %>

                          <div class="post">
                      
                            <div class="post-title">
                              <%= post.title %>
                            </div>


                            <div class="post-date"><a href="/posts/<%= post.id %>"><img src="images/postlink.png" class="ico-link"> </a> 
                             <%= post.created_at.to_s(:ru_datetime) %>   </div>
                            <div class="post-content">

                            <p><%= truncate(strip_tags(post.content), length: 82) %></p>
                          </div>

                        </div>
                        <hr>
                            <% end %>
                    </div>
                    <br>

                    <a href="/posts" class="">Архив новостей</a>
                    <br>
                     

                </div>
                <!--/КОНЕЦ ПОСЛЕДНИХ НОВОСТЕЙ-->