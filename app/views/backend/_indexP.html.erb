<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= raw post.content %></td>

    <td><%= link_to "Редактировать", edit_post_path(post), remote: true, class: "btn btn-success" %></td>
    <td><%= link_to "Удалить", post_delete_path(post), remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>