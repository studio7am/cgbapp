<h1>Входящие</h1>

<table class="table">
  <thead>
    <tr>
      <th>Имя </th>
      <th>Почта</th>
      <th>Сообщение</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.email %></td>
        <td><%= message.message %></td>
        <td><%= link_to 'Показать', message %></td>
        <td><%= link_to 'Удалить', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


