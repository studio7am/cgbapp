$("ul.errors").html("")
<% if @document.errors.any? %>
  <% @document.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".document-index").html("<%= escape_javascript(render 'index') %>")
  $("#document-modal").modal("hide")
<% end %>