<%= form_for @document, remote: true, :html => {:multipart => true} do |f| %>

  <div class="modal-body">
    <ul class="errors"></ul>

    <div class="control-group">
      <div class="controls">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Название' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :description, class: 'form-control', placeholder: 'Описание документа' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.file_field :download_link %>
        <%= f.hidden_field :download_link_cache %>

      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Отправить', class: "btn btn-primary" %>
    <%= link_to "Отменить", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>
