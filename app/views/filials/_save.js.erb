$("ul.errors").html("")
<% if @filial.errors.any? %>
  <% @filial.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".filial-index").html("<%= escape_javascript(render 'index') %>")
  $("#filial-modal").modal("hide")
<% end %>