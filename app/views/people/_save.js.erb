$("ul.errors").html("")
<% if @person.errors.any? %>
  <% @person.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".person-index").html("<%= escape_javascript(render 'index') %>")
  $("#person-modal").modal("hide")
<% end %>